<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        android:orientation="vertical"
        android:paddingTop="@dimen/qb_px_28">

        <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_36">

            <ImageButton
                android:id="@+id/title_img"
                android:layout_width="@dimen/qb_px_32"
                android:layout_height="@dimen/qb_px_32"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/qb_px_8"
                android:background="@null"
                android:src="@mipmap/fanhui" />


            <TextView
                android:id="@+id/title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:textColor="#4a4a4a"
                android:textSize="16sp" />


            <ImageButton
                android:id="@+id/title_iv_right"
                android:layout_width="@dimen/qb_px_32"
                android:layout_height="@dimen/qb_px_32"
                android:layout_alignParentEnd="true"
                android:background="@null" />

            <TextView
                android:id="@+id/title_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingStart="@dimen/qb_px_10"
                android:paddingEnd="@dimen/qb_px_20"
                android:singleLine="true"
                android:textColor="#4a4a4a"
                android:textSize="14sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/title_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_1" />
    </LinearLayout>
</merge>
