<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="@dimen/qb_px_300"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ffffff_8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/qb_px_23"
            android:layout_marginTop="@dimen/qb_px_26"
            android:layout_marginEnd="@dimen/qb_px_23"
            android:layout_marginBottom="@dimen/qb_px_26"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="18sp"
                android:text="@string/find_and_replace"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qb_px_10"
                android:lineSpacingExtra="@dimen/qb_px_2"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="@string/find_content"/>

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/click_input"
                android:background="@null"
                android:textSize="16sp"
                android:paddingTop="@dimen/qb_px_15"
                android:paddingBottom="@dimen/qb_px_15"/>

            <View
                style="@style/lineStyle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qb_px_20"
                android:lineSpacingExtra="@dimen/qb_px_2"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="@string/replace"/>

            <EditText
                android:id="@+id/et_replace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/click_input"
                android:background="@null"
                android:textSize="16sp"
                android:paddingTop="@dimen/qb_px_15"
                android:paddingBottom="@dimen/qb_px_15"/>

            <View
                style="@style/lineStyle" />
        </LinearLayout>

        <View
            style="@style/lineStyle" />

        <LinearLayout
            android:layout_width="@dimen/qb_px_300"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/qb_px_15"
                android:textColor="@color/black4A"
                android:text="@string/cancel"/>

            <View
                android:id="@+id/divider"
                android:layout_width="@dimen/qb_px_1"
                android:layout_height="match_parent"
                android:background="@color/lineColor" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/qb_px_15"
                android:textColor="@color/green00D3BD"
                android:text="@string/confirm"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>