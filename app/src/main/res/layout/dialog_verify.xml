<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="@dimen/qb_px_300"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ffffff_8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/qb_px_15"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black4A"
                android:gravity="center"
                android:textSize="16sp"
                android:text="@string/find_and_replace"
                android:padding="@dimen/qb_px_12"
                android:background="@color/blackEE"/>

            <TextView
                android:id="@+id/hint_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qb_px_10"
                android:lineSpacingExtra="@dimen/qb_px_2"
                android:layout_marginStart="@dimen/qb_px_32"
                android:layout_marginEnd="@dimen/qb_px_32"
                android:textColor="@color/black4A"
                android:textSize="14sp"
                android:text="@string/find_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/qb_px_32"
                android:layout_marginEnd="@dimen/qb_px_32"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center">

                <EditText
                    android:id="@+id/et_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textSize="14sp"
                    android:paddingTop="@dimen/qb_px_12"
                    android:paddingBottom="@dimen/qb_px_12"/>

                <ImageButton
                    android:id="@+id/iv_1"
                    android:layout_width="@dimen/qb_px_40"
                    android:layout_height="@dimen/qb_px_40"
                    android:src="@mipmap/close_black"
                    android:background="@null"/>
            </LinearLayout>


            <View
                style="@style/lineStyle"
                android:layout_marginStart="@dimen/qb_px_32"
                android:layout_marginEnd="@dimen/qb_px_32"/>

            <TextView
                android:id="@+id/hint_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qb_px_20"
                android:lineSpacingExtra="@dimen/qb_px_2"
                android:layout_marginStart="@dimen/qb_px_32"
                android:layout_marginEnd="@dimen/qb_px_32"
                android:textColor="@color/black4A"
                android:textSize="14sp"
                android:text="@string/replace"/>


            <LinearLayout
                android:id="@+id/ll_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/qb_px_32"
                android:layout_marginEnd="@dimen/qb_px_32"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center">

                <EditText
                    android:id="@+id/et_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textSize="14sp"
                    android:paddingTop="@dimen/qb_px_12"
                    android:paddingBottom="@dimen/qb_px_12"/>

                <ImageButton
                    android:id="@+id/iv_2"
                    android:layout_width="@dimen/qb_px_40"
                    android:layout_height="@dimen/qb_px_40"
                    android:src="@mipmap/close_black"
                    android:background="@null"/>
            </LinearLayout>

            <View
                android:id="@+id/line2"
                style="@style/lineStyle"
                android:layout_marginStart="@dimen/qb_px_32"
                android:layout_marginEnd="@dimen/qb_px_32"/>
        </LinearLayout>

        <View
            style="@style/lineStyle" />

        <LinearLayout
            android:layout_width="@dimen/qb_px_300"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/qb_px_12"
                android:textColor="@color/main_color"
                android:text="@string/cancel"/>

            <View
                android:id="@+id/divider"
                android:layout_width="@dimen/qb_px_1"
                android:layout_height="match_parent"
                android:background="@color/lineColor" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/qb_px_12"
                android:textColor="@color/main_color"
                android:text="@string/confirm"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>